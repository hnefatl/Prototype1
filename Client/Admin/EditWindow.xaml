<Window x:Class="Client.Admin.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Admin"
        mc:Ignorable="d"
        SizeToContent="Height"
        Title="EditWindow" Height="80" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        
        <Grid Name="Grid_Controls" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
        </Grid>


        <Button Name="Button_Back" Content="Back" Margin="5,5,60,5" Width="50" Height="20" HorizontalAlignment="Right" Grid.Row="1" Click="Button_Back_Click"/>
        <Button Name="Button_Submit" Content="Submit" Margin="5" Width="50" Height="20" HorizontalAlignment="Right" Grid.Row="1" Click="Button_Submit_Click"/>
    </Grid>
</Window>
